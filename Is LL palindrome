 static Node palleft; static int value = 0;
 
 public static Boolean paLindrome(Linkedlist l){
        left = l.head;
        paLindromeHelper(l, l.head, 0);
        if(l.size % 2 == 1){
            if(value == l.size / 2 + 1){
                return true;
            }
            else{
                return false;
            }
        }
        else{
            if(value == l.size / 2){
                return true;
            }
            else{
                return false;
            }
        }
  }
  public static void paLindromeHelper(Linkedlist l, Node right, int counter){
        if(right == null){
            return;
        }
        paLindromeHelper(l, right.next, counter + 1);
        if(counter >= l.size / 2){
            if(left.data == right.data){
                value += 1;
            }
            left = left.next;
        }
  }
